doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='chrome=1')
    title brief by zeekay
    link(rel='stylesheet', href='stylesheets/styles.css')
    link(rel='stylesheet', href='stylesheets/pygment_trac.css')
    link(rel='stylesheet', href='stylesheets/code.css')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    //if lt IE 9
  body
    .wrapper
      header
        h1 brief
        p Quick and easy gh-pages.
        p.view
          a(href='https://github.com/zeekay/brief')
            | View the Project on GitHub
            small zeekay/brief
        ul
          li
            a(href='https://github.com/zeekay/brief/zipball/master')
              | Download
              strong ZIP File
          li
            a(href='https://github.com/zeekay/brief/tarball/master')
              | Download
              strong TAR Ball
          li
            a(href='https://github.com/zeekay/brief')
              | View On
              strong GitHub
      section
        p!= read('README.md')
      footer
    script(src='javascripts/scale.fix.js')
  script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
